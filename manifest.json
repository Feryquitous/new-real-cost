{
  "manifest_version": 2,

  "name": "RealCost",
  "description": "A Chrome extension that makes prices more relatable and helps reduce unnecessary spending",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches" : ["https://*.amazon.com/", "https://*.ebay.com/*"],
      "css": ["real-cost.css"],
      "js": ["real-cost.js"]
    }
  ]
}

